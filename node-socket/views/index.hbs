<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
<style>
.success{
  color: green;
  font-weight: bold;
  margin-bottom: 10px;
}
.dangar{
  color: red;
  font-weight: bold;
  margin-bottom: 10px;
}
</style>
<title>Run Git Pull</title>
</head>
<body>
  <h1>Run Git Pull</h1>
  <button onclick="runGitPull()">Run  Git Pull</button>
  <p class="success"></p>
  <p class="dangar"></p>

  <script>
    function runGitPull() {
      fetch('/git_pull')
        .then(response => response.text())
        .then(data => {
          data=JSON.parse(data);
          document.querySelector('.success').innerHTML = data.data ;
        })
        .catch(error => {
          error=JSON.parse(error);

          document.querySelector('.dangar').innerHTML = error.message ;
        });
    }
  </script>
</body>
</html>
